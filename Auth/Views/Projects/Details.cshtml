@model App.Models.Projet

@{
    ViewData["Title"] = "Details";
    var getlist = ViewBag.lstUsers as IEnumerable<App.Models.Users>;
    var getlistFiles = ViewBag.lstFiles as IEnumerable<App.Models.File>;
}

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <!-- OVERVIEW -->
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h2>Details</h2>
                    <h4>Project</h4>

                </div>
                <div class="row">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Nom)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Nom)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Date)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Date)
                        </dd>
                        <dt>
                            Team
                        </dt>
                        <dd>
                            <ul>
                                @foreach (var x in getlist)
                                {
                                    <li>@x.Username</li>
                                }
                            </ul>
                        </dd>
                        <dt>
                            Fichiers
                        </dt>
                        <dd>
                            <ul>
                                @foreach (var x in getlistFiles)
                                {
                                    <li>@x.Nom</li>
                                }
                            </ul>
                        </dd>
                    </dl>
                </div>
                    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                <!-- END OVERVIEW -->
            </div>
        </div>
        <!-- END MAIN CONTENT -->
    </div>
</div>
